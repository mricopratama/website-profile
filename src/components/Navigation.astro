<style>
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #06b6d4);
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
  
  .mobile-nav-link {
    position: relative;
    overflow: hidden;
    transition: opacity 0.4s ease, transform 0.4s ease;
    opacity: 0;
    transform: translateX(-30px);
  }

  .mobile-menu-open .mobile-nav-link {
    opacity: 1;
    transform: translateX(0);
  }

  .mobile-menu-open .mobile-menu-items > * {
    transition-property: opacity, transform;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 400ms;
  }

  .mobile-menu-open .mobile-menu-items > :nth-child(1) { transition-delay: 100ms; }
  .mobile-menu-open .mobile-menu-items > :nth-child(2) { transition-delay: 150ms; }
  .mobile-menu-open .mobile-menu-items > :nth-child(3) { transition-delay: 200ms; }
  .mobile-menu-open .mobile-menu-items > :nth-child(4) { transition-delay: 250ms; }
  .mobile-menu-open .mobile-menu-items > :nth-child(5) { transition-delay: 300ms; }
  .mobile-menu-open .mobile-menu-items > :nth-child(6) { transition-delay: 350ms; }
  
  .mobile-nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, rgba(59, 130, 246, 0.1));
    transition: left 0.5s ease;
  }
  
  .mobile-nav-link:hover::before {
    left: 100%;
  }
  
  .menu-open .hamburger-icon {
    display: none;
  }
  .menu-open .close-icon {
    display: block;
  }
  
  .mobile-menu-open {
    transform: translateX(0);
  }
  
  .mobile-overlay-visible {
    opacity: 1;
    visibility: visible;
  }
  
  .navbar-scrolled {
    background: rgba(15, 23, 42, 0.95);
    border-bottom-color: rgba(71, 85, 105, 0.8);
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const nav = document.querySelector('nav');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
    const allNavLinks = document.querySelectorAll('#navbar a[href]');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    const sections = document.querySelectorAll('section[id]');

    let isMenuOpen = false;

    window.addEventListener('scroll', function() {
      if (window.scrollY > 50) {
        nav.classList.add('navbar-scrolled');
      } else {
        nav.classList.remove('navbar-scrolled');
      }
    });

    function toggleMobileMenu() {
      isMenuOpen = !isMenuOpen;
      mobileMenuButton.classList.toggle('menu-open', isMenuOpen);
      mobileMenu.classList.toggle('mobile-menu-open', isMenuOpen);
      mobileMenuOverlay.classList.toggle('mobile-overlay-visible', isMenuOpen);
      document.body.style.overflow = isMenuOpen ? 'hidden' : '';
    }

    mobileMenuButton.addEventListener('click', toggleMobileMenu);
    mobileMenuOverlay.addEventListener('click', toggleMobileMenu);
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (isMenuOpen) toggleMobileMenu();
      });
    });
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && isMenuOpen) toggleMobileMenu();
    });
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 1024 && isMenuOpen) toggleMobileMenu();
    });

    document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const currentPath = window.location.pathname;
        const href = this.getAttribute('href');

        if (currentPath === '/') {
          e.preventDefault();
          const targetId = href.substring(2);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });

    function highlightActiveLink() {
      const currentPath = window.location.pathname;
      const allNavLinks = document.querySelectorAll('#navbar .nav-link');
      const sections = document.querySelectorAll('section[id]');

      allNavLinks.forEach(link => {
        link.classList.remove('text-primary-400', 'active');
        link.classList.add('text-dark-300');
      });

      if (currentPath === '/') {
        let currentSectionId = '';
        sections.forEach(section => {
          const sectionTop = section.offsetTop;
          if (window.scrollY >= sectionTop - 150) {
            currentSectionId = section.getAttribute('id');
          }
        });

        const activeSectionLink = document.querySelector(`.nav-link[href="/#${currentSectionId}"]`);
        if (activeSectionLink) {
          activeSectionLink.classList.remove('text-dark-300');
          activeSectionLink.classList.add('text-primary-400', 'active');
        } else {
          // Fallback ke home jika tidak ada section aktif (misalnya paling atas)
          const homeLink = document.querySelector('.nav-link[href="/"]');
          if (homeLink) {
            homeLink.classList.remove('text-dark-300');
            homeLink.classList.add('text-primary-400', 'active');
          }
        }
      } else {
        // Logika ini akan menyorot tautan utama saat berada di halaman detail
        let linkToActivate = null;
        if (currentPath.startsWith('/projects')) {
            linkToActivate = document.querySelector('#navbar a[href="/#projects"]');
        } else if (currentPath.startsWith('/credentials')) {
            linkToActivate = document.querySelector('#navbar a[href="/#credentials"]');
        } else {
            linkToActivate = document.querySelector(`#navbar a[href="${currentPath}"]`);
        }
        
        if (linkToActivate) {
          linkToActivate.classList.remove('text-dark-300');
          linkToActivate.classList.add('text-primary-400', 'active');
        }
      }
    }

    window.addEventListener('scroll', highlightActiveLink);
    window.addEventListener('resize', highlightActiveLink);
    highlightActiveLink();
  });
</script>