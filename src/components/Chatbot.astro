---
// Chatbot Component
---

<div id="chatbot-container" class="fixed bottom-4 right-4 sm:bottom-6 sm:right-6 z-50">
  <!-- Chat Button -->
  <button 
    id="chat-toggle-btn"
    class="bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white rounded-full p-3 sm:p-4 shadow-lg hover:shadow-2xl hover:shadow-primary-500/50 transition-all duration-300 hover:scale-110 flex items-center justify-center group"
    aria-label="Toggle chatbot"
  >
    <svg id="chat-icon" class="w-5 h-5 sm:w-6 sm:h-6 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
    </svg>
    <svg id="close-icon" class="w-5 h-5 sm:w-6 sm:h-6 hidden group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Chat Window -->
  <div 
    id="chat-window"
    class="absolute bottom-20 right-0 w-96 sm:w-[400px] md:w-[420px] lg:w-[450px] max-w-[calc(100vw-2rem)] h-[500px] sm:h-[550px] md:h-[600px] max-h-[calc(100vh-8rem)] bg-gradient-to-b from-dark-800 to-dark-900 rounded-2xl shadow-2xl border border-primary-900/30 backdrop-blur-xl"
    style="display: none;"
  >
    <!-- Header -->
    <div class="bg-gradient-to-r from-primary-600 via-primary-700 to-primary-800 p-3 sm:p-4 flex items-center justify-between shadow-lg">
      <div class="flex items-center gap-2 sm:gap-3">
        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-white/95 rounded-full flex items-center justify-center shadow-md">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-white font-semibold text-xs sm:text-sm">Portfolio Assistant</h3>
          <p class="text-primary-100 text-[10px] sm:text-xs flex items-center gap-1">
            <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-green-400 rounded-full animate-pulse"></span>
            Online
          </p>
        </div>
      </div>
      <button id="minimize-btn" class="text-white hover:bg-white/10 rounded-lg p-1 sm:p-1.5 transition-colors">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    </div>

    <!-- Messages Container -->
    <div id="messages-container" class="flex-1 overflow-y-auto p-3 sm:p-4 space-y-2 sm:space-y-3 bg-dark-900/50">
      <!-- Welcome Message -->
      <div class="flex gap-2 items-start animate-fade-in">
        <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-full flex-shrink-0 flex items-center justify-center shadow-md">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <div class="bg-gradient-to-br from-dark-700 to-dark-800 rounded-2xl rounded-tl-none p-2.5 sm:p-3 max-w-[85%] sm:max-w-[80%] shadow-lg border border-primary-900/20">
          <p class="text-gray-200 text-xs sm:text-sm leading-relaxed">ðŸ‘‹ Halo! Saya adalah asisten portfolio. Saya dapat membantu Anda mengetahui tentang skills, pengalaman, sertifikasi, dan proyek saya. Apa yang ingin Anda ketahui?</p>
        </div>
      </div>
    </div>

    <!-- Input Area -->
    <div class="p-3 sm:p-4 border-t border-primary-900/30 bg-gradient-to-b from-dark-800 to-dark-900">
      <form id="chat-form" class="flex gap-1.5 sm:gap-2">
        <input
          type="text"
          id="chat-input"
          placeholder="Ketik pesan Anda..."
          class="flex-1 bg-dark-700 text-white rounded-full px-3 sm:px-4 py-2 sm:py-2.5 focus:outline-none focus:ring-2 focus:ring-primary-500 text-xs sm:text-sm placeholder-gray-500 border border-dark-600 transition-all"
          autocomplete="off"
        />
        <button
          type="submit"
          id="send-btn"
          class="bg-gradient-to-br from-primary-600 to-primary-700 text-white rounded-full p-2 sm:p-2.5 hover:shadow-lg hover:shadow-primary-500/50 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed hover:scale-105 active:scale-95"
          aria-label="Send message"
        >
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
          </svg>
        </button>
      </form>
      <p class="text-[10px] sm:text-xs text-gray-600 text-center mt-1.5 sm:mt-2 flex items-center justify-center gap-1">
        <svg class="w-2.5 h-2.5 sm:w-3 sm:h-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
        </svg>
        Powered by Gemini AI
      </p>
    </div>
  </div>
</div>

<style>
  #messages-container::-webkit-scrollbar {
    width: 6px;
  }
  
  #messages-container::-webkit-scrollbar-track {
    background: rgba(15, 23, 42, 0.5);
    border-radius: 10px;
  }
  
  #messages-container::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #2563eb, #1d4ed8);
    border-radius: 10px;
  }
  
  #messages-container::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #3b82f6, #2563eb);
  }

  /* Typing animation */
  @keyframes typing {
    0%, 100% { 
      opacity: 0.3;
      transform: scale(0.8);
    }
    50% { 
      opacity: 1;
      transform: scale(1.1);
    }
  }

  .typing-dot {
    animation: typing 1.4s infinite;
  }

  .typing-dot:nth-child(2) {
    animation-delay: 0.2s;
  }

  .typing-dot:nth-child(3) {
    animation-delay: 0.4s;
  }

  /* Fade in animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.3s ease-out;
  }

  /* Mobile responsiveness */
  @media (max-width: 640px) {
    #chat-window {
      position: fixed !important;
      bottom: 4.5rem !important;
      right: 1rem !important;
      left: 1rem !important;
      width: auto !important;
      max-width: none !important;
    }
  }

  @media (max-width: 380px) {
    #chat-window {
      bottom: 4rem !important;
    }
    
    #chatbot-container {
      bottom: 0.75rem !important;
      right: 0.75rem !important;
    }
  }
</style>

<script>
  // Chat state
  let isOpen = false;
  let isLoading = false;

  // DOM elements
  const toggleBtn = document.getElementById('chat-toggle-btn');
  const chatWindow = document.getElementById('chat-window');
  const chatIcon = document.getElementById('chat-icon');
  const closeIcon = document.getElementById('close-icon');
  const minimizeBtn = document.getElementById('minimize-btn');
  const chatForm = document.getElementById('chat-form');
  const chatInput = document.getElementById('chat-input') as HTMLInputElement;
  const messagesContainer = document.getElementById('messages-container');
  const sendBtn = document.getElementById('send-btn');

  // Toggle chat window
  function toggleChat() {
    isOpen = !isOpen;
    if (isOpen) {
      if (chatWindow) {
        chatWindow.style.display = 'flex';
        chatWindow.style.flexDirection = 'column';
      }
      chatIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      setTimeout(() => chatInput?.focus(), 100);
    } else {
      if (chatWindow) {
        chatWindow.style.display = 'none';
      }
      chatIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  }

  // Add message to chat
  function addMessage(text: string, isUser: boolean) {
    const messageDiv = document.createElement('div');
    messageDiv.className = `flex gap-2 items-start animate-fade-in ${isUser ? 'flex-row-reverse' : ''}`;
    
    const avatar = document.createElement('div');
    avatar.className = `w-8 h-8 rounded-full flex-shrink-0 flex items-center justify-center shadow-md ${
      isUser 
        ? 'bg-gradient-to-br from-accent-500 to-accent-600' 
        : 'bg-gradient-to-br from-primary-500 to-primary-700'
    }`;
    
    const avatarIcon = document.createElement('svg');
    avatarIcon.className = 'w-4 h-4 text-white';
    avatarIcon.setAttribute('fill', 'none');
    avatarIcon.setAttribute('stroke', 'currentColor');
    avatarIcon.setAttribute('viewBox', '0 0 24 24');
    
    if (isUser) {
      avatarIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>';
    } else {
      avatarIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>';
    }
    
    avatar.appendChild(avatarIcon);
    
    const bubble = document.createElement('div');
    bubble.className = `rounded-2xl p-2.5 sm:p-3 max-w-[85%] sm:max-w-[80%] shadow-lg ${
      isUser 
        ? 'bg-gradient-to-br from-primary-600 to-primary-700 rounded-tr-none' 
        : 'bg-gradient-to-br from-dark-700 to-dark-800 rounded-tl-none border border-primary-900/20'
    }`;
    
    const textEl = document.createElement('p');
    textEl.className = 'text-gray-100 text-xs sm:text-sm leading-relaxed whitespace-pre-wrap';
    
    // Format markdown-style text
    const formattedText = text
      .replace(/\*\*(.*?)\*\*/g, '<strong class="font-semibold text-white">$1</strong>')
      .replace(/\*(.*?)\*/g, '<em class="italic">$1</em>')
      .replace(/###\s(.*?)(\n|$)/g, '<h3 class="font-bold text-base text-primary-300 mt-3 mb-2">$1</h3>')
      .replace(/##\s(.*?)(\n|$)/g, '<h2 class="font-bold text-lg text-primary-200 mt-3 mb-2">$1</h2>')
      .replace(/- (.*?)(\n|$)/g, '<div class="flex gap-2 my-1"><span class="text-primary-400">â€¢</span><span>$1</span></div>');
    
    textEl.innerHTML = formattedText;
    
    bubble.appendChild(textEl);
    messageDiv.appendChild(avatar);
    messageDiv.appendChild(bubble);
    
    messagesContainer?.appendChild(messageDiv);
    messagesContainer?.scrollTo({
      top: messagesContainer.scrollHeight,
      behavior: 'smooth'
    });
  }

  // Show typing indicator
  function showTypingIndicator() {
    const typingDiv = document.createElement('div');
    typingDiv.id = 'typing-indicator';
    typingDiv.className = 'flex gap-2 items-start animate-fade-in';
    
    const avatar = document.createElement('div');
    avatar.className = 'w-8 h-8 bg-gradient-to-br from-primary-500 to-primary-700 rounded-full flex-shrink-0 flex items-center justify-center shadow-md';
    avatar.innerHTML = '<svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>';
    
    const bubble = document.createElement('div');
    bubble.className = 'bg-gradient-to-br from-dark-700 to-dark-800 rounded-2xl rounded-tl-none p-3 shadow-lg border border-primary-900/20';
    
    const dots = document.createElement('div');
    dots.className = 'flex gap-1.5';
    dots.innerHTML = '<div class="w-2 h-2 bg-primary-400 rounded-full typing-dot"></div><div class="w-2 h-2 bg-primary-400 rounded-full typing-dot"></div><div class="w-2 h-2 bg-primary-400 rounded-full typing-dot"></div>';
    
    bubble.appendChild(dots);
    typingDiv.appendChild(avatar);
    typingDiv.appendChild(bubble);
    
    messagesContainer?.appendChild(typingDiv);
    messagesContainer?.scrollTo({
      top: messagesContainer.scrollHeight,
      behavior: 'smooth'
    });
  }

  // Remove typing indicator
  function removeTypingIndicator() {
    const typingIndicator = document.getElementById('typing-indicator');
    if (typingIndicator) {
      typingIndicator.remove();
    }
  }

  // Send message to API
  async function sendMessage(message: string) {
    if (isLoading || !message.trim()) return;
    
    isLoading = true;
    addMessage(message, true);
    chatInput!.value = '';
    sendBtn?.setAttribute('disabled', 'true');
    
    showTypingIndicator();
    
    try {
      const response = await fetch('/.netlify/functions/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ message }),
      });
      
      if (!response.ok) {
        throw new Error('Failed to get response');
      }
      
      const data = await response.json();
      removeTypingIndicator();
      addMessage(data.response, false);
    } catch (error) {
      console.error('Error:', error);
      removeTypingIndicator();
      addMessage('Maaf, terjadi kesalahan. Silakan coba lagi nanti.', false);
    } finally {
      isLoading = false;
      sendBtn?.removeAttribute('disabled');
      chatInput?.focus();
    }
  }

  // Event listeners
  toggleBtn?.addEventListener('click', toggleChat);
  minimizeBtn?.addEventListener('click', toggleChat);
  
  chatForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const message = chatInput?.value;
    if (message) {
      sendMessage(message);
    }
  });

  // Allow Enter to send, Shift+Enter for new line
  chatInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      chatForm?.dispatchEvent(new Event('submit'));
    }
  });
</script>
