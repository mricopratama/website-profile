      <!-- Main Content -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-shadow">
        <span class="text-shimmer cyber-text">
          Full-Stack Developer
        </span>
        <br />
        <span class="text-white cyber-text">
          & Cybersecurity Analyst
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-dark-300 mb-8 max-w-3xl mx-auto leading-relaxed breathing cyber-tagline">
        <span class="highlight-text">Securing the digital frontier</span> through innovative code and bulletproof architectures. 
        <span class="typing-text">Transforming vulnerabilities into fortresses.</span>
      </p>
      
      <!-- Highlight Stats -->
      <div class="grid grid-cols-3 gap-8 mb-10 max-w-2xl mx-auto breathing cyber-stats">
        <div class="text-center hover:scale-110 transition-transform duration-300 stat-card">
          <svg class="w-8 h-8 mx-auto mb-2 text-primary-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z"/>
          </svg>
