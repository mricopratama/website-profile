---
import '@fortawesome/fontawesome-free/css/all.min.css';
---

<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden animated-background cyber-theme">
  <!-- Background Pattern -->
  <div class="absolute inset-0 cyber-grid opacity-30"></div>
  
  <!-- Cyber Security Matrix Effect -->
  <div class="matrix-rain absolute inset-0 pointer-events-none"></div>
  
  <!-- Terminal Window -->
  <div class="terminal-window absolute top-10 right-10 hidden lg:block">
    <div class="terminal-header">
      <div class="terminal-buttons">
        <span class="terminal-btn red"></span>
        <span class="terminal-btn yellow"></span>
        <span class="terminal-btn green"></span>
      </div>
      <span class="terminal-title">security_scan.sh</span>
    </div>
    <div class="terminal-body">
      <div class="terminal-line">
        <span class="terminal-prompt">root@portfolio:~$</span>
        <span class="terminal-command typing-effect">nmap -sS -O target_system</span>
      </div>
      <div class="terminal-output">
        <div class="scan-result">✓ Port 443/tcp open ssl/https</div>
        <div class="scan-result">✓ Port 80/tcp open http</div>
        <div class="scan-result">✓ Security scan complete</div>
        <div class="scan-result success">✓ System secured by Expert</div>
      </div>
    </div>
  </div>
  
  <!-- Floating Particles -->
  <div class="floating-particles">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>
  
  <!-- Morphing Shapes -->
  <div class="morphing-shape w-64 h-64 top-20 left-10"></div>
  <div class="morphing-shape w-48 h-48 bottom-20 right-20" style="animation-delay: -10s;"></div>
  <div class="morphing-shape w-32 h-32 top-1/2 right-10" style="animation-delay: -15s;"></div>
  
  <!-- Floating Elements -->
  <div class="absolute top-20 left-10 w-20 h-20 bg-primary-500/20 rounded-full blur-xl floating-animation breathing"></div>
  <div class="absolute bottom-20 right-10 w-32 h-32 bg-accent-500/20 rounded-full blur-xl floating-animation breathing" style="animation-delay: -3s;"></div>
  <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-secondary-500/20 rounded-full blur-xl floating-animation breathing" style="animation-delay: -1.5s;"></div>
  
  <!-- Pulse Waves -->
  <div class="pulse-wave w-20 h-20 top-1/3 left-1/3"></div>
  <div class="pulse-wave w-16 h-16 bottom-1/3 right-1/3" style="animation-delay: -4s;"></div>
  
  <div class="container mx-auto px-6 py-20 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Profile Image -->
      <div class="mb-8 breathing">
        <img 
          src="/foto_profile.jpg" 
          alt="Profile Picture" 
          class="w-32 h-32 rounded-full mx-auto object-cover ring-4 ring-primary-500/50 shadow-xl hover:ring-8 hover:ring-primary-400/30 transition-all duration-500 cyber-avatar"
        />
