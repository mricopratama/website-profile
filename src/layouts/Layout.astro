---
import Chatbot from '../components/Chatbot.astro';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/icon-logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title || 'Full-Stack Developer & Cybersecurity Analyst'}</title>
		<meta name="description" content={Astro.props.description || 'Professional portfolio showcasing expertise in full-stack development and cybersecurity analysis.'} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
	</head>
	<body class="bg-dark-900 text-white overflow-x-hidden">
		<slot />
		<Chatbot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}
	
	body {
		font-family: 'Inter', system-ui, sans-serif;
		line-height: 1.6;
	}
	
	* {
		box-sizing: border-box;
	}
	
	.gradient-text {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.glass-effect {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}
	
	.tech-glow {
		box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
	}
	
	.cyber-grid {
		background-image: 
			linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px),
			linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
		background-size: 50px 50px;
	}
	
	.floating-animation {
		animation: float 6s ease-in-out infinite;
	}
	
	/* Enhanced card animations */
	.card-3d-effect {
		transform-style: preserve-3d;
		perspective: 1000px;
	}
	
	.card-magnetic {
		transition: transform 0.3s ease;
	}
	
	.card-magnetic:hover {
		transform: translate3d(0, -10px, 0);
	}
	
	/* Smooth scroll enhancements */
	@media (prefers-reduced-motion: no-preference) {
		.smooth-reveal {
			opacity: 0;
			transform: translateY(30px);
			transition: opacity 0.6s ease, transform 0.6s ease;
		}
		
		.smooth-reveal.revealed {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	/* Continuous background animations */
	.animated-background {
		position: relative;
		overflow: hidden;
	}
	
	.animated-background::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 40% 40%, rgba(6, 182, 212, 0.1) 0%, transparent 50%);
		animation: backgroundShift 20s ease-in-out infinite;
		z-index: -1;
	}
	
	@keyframes backgroundShift {
		0%, 100% { 
			transform: translateX(0) translateY(0) scale(1); 
		}
		25% { 
			transform: translateX(5%) translateY(-2%) scale(1.05); 
		}
		50% { 
			transform: translateX(-3%) translateY(3%) scale(0.95); 
		}
		75% { 
			transform: translateX(-5%) translateY(-1%) scale(1.02); 
		}
	}
	
	/* Floating particles */
	.floating-particles {
		position: absolute;
		width: 100%;
		height: 100%;
		overflow: hidden;
		z-index: -1;
	}
	
	.particle {
		position: absolute;
		background: rgba(59, 130, 246, 0.3);
		border-radius: 50%;
		animation: particleFloat 15s linear infinite;
	}
	
	.particle:nth-child(1) { 
		width: 4px; height: 4px; 
		left: 10%; 
		animation-delay: 0s; 
		animation-duration: 12s;
	}
	.particle:nth-child(2) { 
		width: 6px; height: 6px; 
		left: 20%; 
		animation-delay: 2s; 
		animation-duration: 18s;
		background: rgba(139, 92, 246, 0.3);
	}
	.particle:nth-child(3) { 
		width: 3px; height: 3px; 
		left: 30%; 
		animation-delay: 4s; 
		animation-duration: 15s;
		background: rgba(6, 182, 212, 0.3);
	}
	.particle:nth-child(4) { 
		width: 5px; height: 5px; 
		left: 40%; 
		animation-delay: 6s; 
		animation-duration: 20s;
	}
	.particle:nth-child(5) { 
		width: 4px; height: 4px; 
		left: 50%; 
		animation-delay: 8s; 
		animation-duration: 14s;
		background: rgba(251, 191, 36, 0.3);
	}
	.particle:nth-child(6) { 
		width: 7px; height: 7px; 
		left: 60%; 
		animation-delay: 10s; 
		animation-duration: 16s;
		background: rgba(34, 197, 94, 0.3);
	}
	.particle:nth-child(7) { 
		width: 3px; height: 3px; 
		left: 70%; 
		animation-delay: 12s; 
		animation-duration: 22s;
	}
	.particle:nth-child(8) { 
		width: 5px; height: 5px; 
		left: 80%; 
		animation-delay: 14s; 
		animation-duration: 13s;
		background: rgba(239, 68, 68, 0.3);
	}
	.particle:nth-child(9) { 
		width: 4px; height: 4px; 
		left: 90%; 
		animation-delay: 16s; 
		animation-duration: 19s;
		background: rgba(139, 92, 246, 0.3);
	}
	
	@keyframes particleFloat {
		0% {
			transform: translateY(100vh) rotate(0deg);
			opacity: 0;
		}
		10% {
			opacity: 1;
		}
		90% {
			opacity: 1;
		}
		100% {
			transform: translateY(-100px) rotate(360deg);
			opacity: 0;
		}
	}
	
	/* Morphing shapes */
	.morphing-shape {
		position: absolute;
		background: linear-gradient(45deg, rgba(59, 130, 246, 0.1), rgba(139, 92, 246, 0.1));
		border-radius: 50%;
		animation: morphShape 25s ease-in-out infinite;
		z-index: -1;
	}
	
	@keyframes morphShape {
		0%, 100% {
			border-radius: 50% 50% 50% 50%;
			transform: rotate(0deg) scale(1);
		}
		25% {
			border-radius: 60% 40% 60% 40%;
			transform: rotate(90deg) scale(1.1);
		}
		50% {
			border-radius: 40% 60% 40% 60%;
			transform: rotate(180deg) scale(0.9);
		}
		75% {
			border-radius: 70% 30% 70% 30%;
			transform: rotate(270deg) scale(1.05);
		}
	}
	
	/* Pulse waves */
	.pulse-wave {
		position: absolute;
		border: 2px solid rgba(59, 130, 246, 0.2);
		border-radius: 50%;
		animation: pulseWave 8s ease-out infinite;
	}
	
	@keyframes pulseWave {
		0% {
			transform: scale(0);
			opacity: 1;
		}
		100% {
			transform: scale(4);
			opacity: 0;
		}
	}
	
	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-20px); }
	}
	
	/* Unique hover effects */
	.hover-lift {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}
	
	.hover-lift:hover {
		transform: translateY(-8px) scale(1.02);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
	}
	
	.hover-tilt {
		transition: all 0.3s ease;
	}
	
	.hover-tilt:hover {
		transform: perspective(1000px) rotateX(5deg) rotateY(5deg) translateZ(20px);
	}
	
	/* Unique rotating card animations */
	.card-rotate-continuous {
		animation: cardRotateContinuous 25s linear infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-wobble {
		animation: cardWobble 12s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-orbit {
		animation: cardOrbit 18s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-flip {
		animation: cardFlip 16s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-pendulum {
		animation: cardPendulum 14s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-spiral {
		animation: cardSpiral 22s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-dance {
		animation: cardDance 16s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-wave {
		animation: cardWave 18s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	.card-rotate-twist {
		animation: cardTwist 15s ease-in-out infinite;
		transform-style: preserve-3d;
	}
	
	/* Keyframes for unique card animations */
	@keyframes cardRotateContinuous {
		0% { transform: rotateY(0deg) rotateX(0deg) translateZ(0px); }
		25% { transform: rotateY(45deg) rotateX(2deg) translateZ(5px); }
		50% { transform: rotateY(90deg) rotateX(0deg) translateZ(0px); }
		75% { transform: rotateY(135deg) rotateX(-2deg) translateZ(5px); }
		100% { transform: rotateY(180deg) rotateX(0deg) translateZ(0px); }
	}
	
	@keyframes cardWobble {
		0%, 100% { transform: rotateZ(0deg) rotateY(0deg) scale(1); }
		25% { transform: rotateZ(1deg) rotateY(5deg) scale(1.01); }
		50% { transform: rotateZ(0deg) rotateY(0deg) scale(1.02); }
		75% { transform: rotateZ(-1deg) rotateY(-5deg) scale(1.01); }
	}
	
	@keyframes cardOrbit {
		0% { transform: rotateY(0deg) translateX(0px) rotateZ(0deg); }
		25% { transform: rotateY(45deg) translateX(10px) rotateZ(2deg); }
		50% { transform: rotateY(90deg) translateX(0px) rotateZ(0deg); }
		75% { transform: rotateY(135deg) translateX(-10px) rotateZ(-2deg); }
		100% { transform: rotateY(180deg) translateX(0px) rotateZ(0deg); }
	}
	
	@keyframes cardFlip {
		0%, 100% { transform: rotateX(0deg) rotateY(0deg); }
		25% { transform: rotateX(180deg) rotateY(0deg); }
		50% { transform: rotateX(180deg) rotateY(180deg); }
		75% { transform: rotateX(0deg) rotateY(180deg); }
	}
	
	@keyframes cardPendulum {
		0%, 100% { transform: rotateZ(0deg) translateY(0px); }
		25% { transform: rotateZ(8deg) translateY(-5px); }
		50% { transform: rotateZ(0deg) translateY(0px); }
		75% { transform: rotateZ(-8deg) translateY(-5px); }
	}
	
	@keyframes cardSpiral {
		0% { transform: rotateY(0deg) rotateZ(0deg) scale(1); }
		25% { transform: rotateY(90deg) rotateZ(90deg) scale(1.1); }
		50% { transform: rotateY(180deg) rotateZ(180deg) scale(0.9); }
		75% { transform: rotateY(270deg) rotateZ(270deg) scale(1.1); }
		100% { transform: rotateY(360deg) rotateZ(360deg) scale(1); }
	}
	
	@keyframes cardDance {
		0%, 100% { transform: translateX(0px) translateY(0px) rotateZ(0deg); }
		16% { transform: translateX(5px) translateY(-2px) rotateZ(1deg); }
		33% { transform: translateX(-2px) translateY(5px) rotateZ(-1deg); }
		50% { transform: translateX(4px) translateY(-4px) rotateZ(2deg); }
		66% { transform: translateX(-5px) translateY(2px) rotateZ(-1deg); }
		83% { transform: translateX(2px) translateY(-5px) rotateZ(1deg); }
	}
	
	@keyframes cardWave {
		0%, 100% { transform: rotateX(0deg) translateY(0px) rotateZ(0deg); }
		25% { transform: rotateX(5deg) translateY(-8px) rotateZ(1deg); }
		50% { transform: rotateX(0deg) translateY(0px) rotateZ(0deg); }
		75% { transform: rotateX(-5deg) translateY(8px) rotateZ(-1deg); }
	}
	
	@keyframes cardTwist {
		0%, 100% { transform: rotateY(0deg) rotateX(0deg) rotateZ(0deg); }
		33% { transform: rotateY(120deg) rotateX(10deg) rotateZ(5deg); }
		66% { transform: rotateY(240deg) rotateX(-10deg) rotateZ(-5deg); }
	}
	
	/* Enhanced hover effects for rotating cards */
	.card-rotate-continuous:hover {
		animation-play-state: paused;
		transform: rotateY(15deg) rotateX(10deg) translateZ(30px) scale(1.05);
		box-shadow: 0 25px 50px rgba(59, 130, 246, 0.3);
	}
	
	.card-rotate-wobble:hover {
		animation-play-state: paused;
		transform: rotateZ(5deg) rotateY(15deg) scale(1.08);
		box-shadow: 0 20px 40px rgba(139, 92, 246, 0.3);
	}
	
	.card-rotate-orbit:hover {
		animation-play-state: paused;
		transform: rotateY(20deg) translateX(10px) rotateZ(8deg) scale(1.06);
		box-shadow: 0 30px 60px rgba(6, 182, 212, 0.3);
	}
	
	.card-rotate-flip:hover {
		animation-play-state: paused;
		transform: rotateX(25deg) rotateY(25deg) scale(1.07);
		box-shadow: 0 35px 70px rgba(34, 197, 94, 0.3);
	}
	
	.card-rotate-pendulum:hover {
		animation-play-state: paused;
		transform: rotateZ(10deg) translateY(-15px) scale(1.05);
		box-shadow: 0 25px 50px rgba(251, 191, 36, 0.3);
	}
	
	.card-rotate-spiral:hover {
		animation-play-state: paused;
		transform: rotateY(30deg) rotateZ(15deg) scale(1.1);
		box-shadow: 0 40px 80px rgba(239, 68, 68, 0.3);
	}
	
	.card-rotate-dance:hover {
		animation-play-state: paused;
		transform: translateX(5px) translateY(-10px) rotateZ(8deg) scale(1.06);
		box-shadow: 0 20px 40px rgba(168, 85, 247, 0.3);
	}
	
	.card-rotate-wave:hover {
		animation-play-state: paused;
		transform: rotateX(15deg) translateY(-20px) rotateZ(5deg) scale(1.05);
		box-shadow: 0 30px 60px rgba(14, 165, 233, 0.3);
	}
	
	.card-rotate-twist:hover {
		animation-play-state: paused;
		transform: rotateY(25deg) rotateX(15deg) rotateZ(10deg) scale(1.08);
		box-shadow: 0 35px 70px rgba(16, 185, 129, 0.3);
	}
	
	/* Staggered animation delays */
	.card-delay-1 { animation-delay: 0s; }
	.card-delay-2 { animation-delay: 0.5s; }
	.card-delay-3 { animation-delay: 1s; }
	.card-delay-4 { animation-delay: 1.5s; }
	.card-delay-5 { animation-delay: 2s; }
	.card-delay-6 { animation-delay: 2.5s; }
	.card-delay-7 { animation-delay: 3s; }
	.card-delay-8 { animation-delay: 3.5s; }
	.card-delay-9 { animation-delay: 4s; }
	
	/* Text animations */
	.text-shimmer {
		background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
		background-size: 200% 100%;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: textShimmer 3s ease-in-out infinite;
	}
	
	@keyframes textShimmer {
		0%, 100% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
	}
	
	/* Breathing effect */
	.breathing {
		animation: breathe 4s ease-in-out infinite;
	}
	
	@keyframes breathe {
		0%, 100% { transform: scale(1); }
		50% { transform: scale(1.02); }
	}
	
	.scroll-smooth {
		scroll-behavior: smooth;
	}
	
	.text-shadow {
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
	}
</style>